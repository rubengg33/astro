import Article from '../../components/Article.astro'
import Layout from '../../layouts/Layout.astro'
import { getPosts } from '../../lib/articles';

export async function getStaticPaths() {
  const posts = await getPosts()
  return posts.map(item => {
    return { params: item }
  })
}

